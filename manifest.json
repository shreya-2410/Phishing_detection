{
  "manifest_version": 3,
  "name": "Basic Phishing Detector",
  "description": "Passively flags potentially suspicious URLs.",
  "version": "0.1.0",
  "permissions": ["tabs", "activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Phishing Detector",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon_default.png",
      "32": "icon_default.png",
      "48": "icon_default.png",
      "128": "icon_default.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon_default.png",
    "32": "icon_default.png",
    "48": "icon_default.png",
    "128": "icon_default.png"
  }
}
